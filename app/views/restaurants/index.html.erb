<h1>Restaurants</h1>

<%= link_to "New restaurant", new_restaurant_path, class:"btn-primary" %>
<div>
  <% @restaurants.each do |restaurant| %>
    <div class="card">
      <p>
        <strong>Name:</strong>
        <%= restaurant.name %>
      </p>

      <p>
        <strong>Address:</strong>
        <%= restaurant.address %>
      </p>

      <p>
        <strong>Phone number:</strong>
        <%= restaurant.phone_number %>
      </p>

      <p>
        <strong>Category:</strong>
        <%= restaurant.category.capitalize %>
      </p>

      <p>
        <%= link_to "Show this restaurant", restaurant %>
      </p>

    <% end %>
  </div>
</div>
