<h1>New review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>

  <div class="form-inputs">
    <%= f.input :rating %>
    <%= f.input :content %>
     </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary" %>
  </div>
<% end %>

<div>
  <%= link_to "Back to restaurant", restaurant_path(@restaurant) %>
</div>
